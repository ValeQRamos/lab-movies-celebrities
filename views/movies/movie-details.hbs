
<div>
  <h1>{{name}}</h1>
  <p>{{genre}}</p>
  <p>{{plot}}</p>

  <ul>
    {{#each cast}}
      <li>{{this.name}} {{this.occupation}} {{this.catchPhrase}}</li>
      
    {{/each }}
  </ul>
</div>


<form action="/movies/{{_id}}/delete" method="POST">
  <button>Delete</button>
</form>

<a href="/movies/{{_id}}/edit">Edit</a>
