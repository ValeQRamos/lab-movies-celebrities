<h1>Add a Movie</h1>

<form action="/movies/create" method="POST">
  <label>Name:
    <input type="text" name="name">
  </label>

  <label>Genre:
    <input type="text" name="genre">
  </label>

  <label>Plot:
    <textarea name="plot" cols="30" rows="7"></textarea>
  </label>

  <label>Cast:
    <select multiple name="cast" class="input">
      {{#each celebrityInfo}}
        <ul>
          <li><option value="{{_id}}"> {{name}} </option></li>
        </ul>
      {{/each}}
    </select>
  </label>

  <button type="submit">Add!</button>
</form>

